{
  "name": "all-a-education-platform",
  "version": "0.0.0",
  "description": "Node.js backend for Tuition Management System",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:all": "concurrently \"npm run dev\" \"node backend/server.js\"",
    "validate": "node --check server.js && node --check backend/server.js",
    "client:dev": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "build": "npm run build:client",
    "start:prod": "NODE_ENV=production node server.js",
    "lint": "eslint \"**/*.{js,jsx}\" --max-warnings=0",
    "format": "prettier --write ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.0.0",
    "google-spreadsheet": "^4.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.8",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-config-prettier": "^8.0.0"
  }
}